@import "../../node_modules/bootstrap-styl/bootstrap";
@import "tags";

html, body
  margin 0
  padding 0

ul
  list-style none
  margin 0
  padding 0

.form-control
  border-radius 2px

.m-r-10
  margin-right 10px

.m-t-10
  margin-top 10px

sidebar-width = 100px
.sidebar
  width sidebar-width
  border-right 1px solid #959595
  position fixed
  height 100%
  text-align right
  padding-right 20px
  padding-top 20px

.main
  width 100%
  padding-left (sidebar-width + 20)

.editor-toolbar
  border 1px solid #ccc
  padding 0 4px
  position relative
  a
    color #626262
    width 30px
    height 30px
    display inline-block
    text-align center
    border-radius 2px
    line-height 30px
    margin 4px 0
    border 1px solid transparent
    cursor pointer
    &:hover
      background #fcfcfc
      border-color #ddd
      text-decoration none
    &:focus
      text-decoration none
  &:before, &:after
    height 1px
    display block
    content ' '
  .icon-enlarge2
    position absolute
    right 4px

md-style p
  text-indent 2em
